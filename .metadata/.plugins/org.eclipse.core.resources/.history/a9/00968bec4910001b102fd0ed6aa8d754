<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbs.example.lolHi.dao.ArticleDao">
	<select id="getMembers" resultType="Member">
		SELECT *
		FROM member
		ORDER BY id DESC
		<if test="limitFrom != null and limitTake != null">
			LIMIT #{limitFrom}, #{limitTake}
		</if>
	</select>


	<select id="getMemberById" resultType="Member">
		SELECT *
		FROM member
		WHERE
		id = #{id}
	</select>

	<delete id="deleteMemberById">
		DELETE FROM member
		WHERE id = #{id}
	</delete>

	<update id="modifyMember">
		UPDATE member
		<set>
			updateDate = NOW(),
			<if test="loginId != null">
				loginId = #{loginId},
			</if>
			<if test="loginPw != null">
				`loginPw` = #{loginPw},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<insert id="joinMember" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO member
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="loginId != null">
				loginId = #{loginId},
			</if>
			<if test="loginPw != null">
				`loginPw` = #{loginPw},
			</if>
		</set>
	</insert>
</mapper>
