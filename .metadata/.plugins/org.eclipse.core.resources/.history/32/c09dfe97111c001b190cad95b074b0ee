<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.example.lolHi.dao.ReplyDao">
	<insert id="write" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO reply
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="relTypeCode != null">
				relTypeCode = #{relTypeCode},
			</if>
			<if test="relId != null">
				relId = #{relId},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
			<if test="memberId != null">
				`memberId` = #{memberId},
			</if>
		</set>
	</insert>
	
	<select id="getForPrintArticleReplies" resultMap="articleReply">
		SELECT AR.*,
		M.name AS extra__writer
		FROM articleReply AS AR
		INNER JOIN `member` AS M
		ON AR.memberId = M.id
		WHERE AR.articleId = #{articleId}
		ORDER BY AR.id
		DESC
	</select>
	
	<resultMap type="ArticleReply" id="articleReply">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="memberId" column="memberId" />
		<id property="relTypeCode" column="relTypeCode" />
		<id property="relId" column="relId" />
		<id property="body" column="body" />
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>
</mapper>