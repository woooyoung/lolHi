<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.example.lolHi.dao.ReplyDao">
	<insert id="write" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO reply
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="relTypeCode != null">
				relTypeCode = #{relTypeCode},
			</if>
			<if test="relId != null">
				relId = #{relId},
			</if>
			<if test="body != null">
				`body` = #{body},
			</if>
			<if test="memberId != null">
				`memberId` = #{memberId},
			</if>
		</set>
	</insert>
	
	<update id="modify">
		UPDATE reply
		<set>
			updateDate = NOW(),
			<if test="body != null">
				`body` = #{body},
			</if>
		</set>
		WHERE id = #{id}
	</update>


	<select id="getForPrintReplies" resultMap="reply">
		SELECT RE.*,
		M.name AS
		extra__writer
		FROM reply AS RE
		INNER JOIN member AS M
		ON RE.memberId =
		M.id
		WHERE RE.relTypeCode = #{relTypeCode}
		AND RE.relId = #{relId}
		ORDER
		BY RE.id DESC
	</select>

	<select id="getReply" resultType="Reply">
		SELECT *
		FROM reply
		WHERE id =
		#{id}
	</select>

	<delete id="deleteReplyById">
		DELETE FROM reply
		WHERE id = #{id}
	</delete>

	<resultMap type="Reply" id="reply">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="relTypeCode" column="relTypeCode" />
		<id property="relId" column="relId" />
		<id property="body" column="body" />
		<id property="memberId" column="memberId" />

		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>

</mapper>